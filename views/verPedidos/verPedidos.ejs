<% include ../partials/header %>
<h2 class="text-center">Todos os pedidos</h2>
<p class="qtdeprods">Quantidade de pedidos: <%= pedidos.length %></p>

<div class="container">
	<hr>
	<div class="row">
		<% pedidos.forEach(pedido => { %>
		<div class="col-12">
			<div class="clientes-view row">
				<div class="col-12 col-sm-4 d-inline"><p class="truncate"><span class="attr">Cliente: </span> <%= pedido.cliente._id %></p></div>
				<div class="col-12 col-sm-4 d-inline"><p class="truncate"><span class="attr">Data de criação: </span> <%= pedido.dataPedido %></p></div>
				<div class="col-12 col-sm-4 d-inline text-center" style="display: none !important">
					<a class="btn btn-warning" href="/produto/<%= pedido._id %>">Ver produto</a>
					<a href="/produto/<%= pedido._id %>/edit" class="btn btn-warning" style="">Editar produto</a>
					<form class="d-inline" action="/produto/<%= pedido._id %>?_method=DELETE" method="post">
						<input class="btn btn-warning" type="submit" name="Deletar produto" value="Deletar produto" style="cursor: pointer;">
					</form>
				</div>
			</div>
		</div>
		<% }); %>
	</div>
</div>


<% include ../partials/footer %>